generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  birthday   DateTime
  password   String
  watchLater String[]
  donator    Boolean  @default(false)
  avatar     String?
  verified   Boolean  @default(false)

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}

model movies {
  id          String   @id @default(uuid())
  title       String
  subTitle    String?
  src         String
  background  String
  overlay     String
  description String
  duration    String
  genero      String[]

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}
